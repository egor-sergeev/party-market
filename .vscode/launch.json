{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Next.js Server",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "port": 9229,
            "console": "integratedTerminal",
            "env": {
                "NODE_OPTIONS": "--inspect"
            },
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Debug Next.js Client",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///./*": "${webRoot}/*"
            }
        }
    ],
    "compounds": [
        {
            "name": "Debug Fullstack Next.js",
            "configurations": [
                "Debug Next.js Server",
                "Debug Next.js Client"
            ]
        }
    ]
}